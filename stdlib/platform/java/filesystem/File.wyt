import filesystem.fileEffects
import filesystem.Reader
import filesystem.Writer
import filesystem.RandomAccessFile
resource type File
    effect openForRead
    effect openForWrite
    effect openForAppend
    effect openForRandomAccess
    def makeReader(): {this.openForRead} Reader
    def makeWriter(): {this.openForWrite} Writer
    def makeAppender(): {this.openForAppend} Writer
    def makeRandomAccessFile(mode : String): {this.openForRandomAccess} RandomAccessFile